<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.balance.update.autobalanceupdate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.balance.update.autobalanceupdate.presentation.filters.FiltersActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".presentation.unresolved.UnresolvedSmsActivity"
            android:parentActivityName=".presentation.filters.FiltersActivity" />
        <activity
            android:name=".presentation.filters.setup.SetupFilterActivity"
            android:parentActivityName=".presentation.filters.datainfo.SpendingActivity" />
        <activity
            android:name=".presentation.filters.datainfo.SpendingActivity"
            android:parentActivityName=".presentation.filters.FiltersActivity" />

        <service android:name="com.balance.update.autobalanceupdate.data.services.sms.SmsParserService" />

        <receiver
            android:name="com.balance.update.autobalanceupdate.data.services.sms.SmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>


</manifest>